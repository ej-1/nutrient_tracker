<%= form_for(eaten_food) do |f| %>
  <% if eaten_food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(eaten_food.errors.count, "error") %> prohibited this eaten_food from being saved:</h2>

      <ul>
      <% eaten_food.errors.full_messages.each do |message| %>
